
<div id="splash">
<div class="page-header">
  <h1> Welcome to Triptography!</h1>
</div>

<div class="sign-in">
  <h3>Search</h3>
  <div class="input-field">
    <%= form_tag(session_path) do %>
      <%= text_field_tag(:search) %>
      <%= submit_tag('submit') %><br><br>
    <% end %><br>
  </div>
  <h3>Sign In</h3>
  <div class="input-field">
    <%= form_tag(session_path) do %>
      <%= label_tag(:email) %>
      <%= text_field_tag(:email) %>
      <%= label_tag(:password) %>
      <%= password_field_tag(:password) %>
      <%= submit_tag('submit') %><br>
    <% end %>
    <p style="color: red"><%= flash[:error] %></p>
    <p style="color: green;"><strong><%= flash[:notice] %></strong><p>
  </div>
  <br>
  <div class="signup">
    <h4><%= link_to('Sign up!', new_user_path) %></h4>
  </div>
</div>
</div>
